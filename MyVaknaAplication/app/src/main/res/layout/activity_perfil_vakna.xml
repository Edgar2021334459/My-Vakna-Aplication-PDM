<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco_k"
    tools:context=".PerfilVakna">

    <View
        android:id="@+id/view_container_top_bv"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@color/marrom_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_container_perfil_pv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/container_user"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_perfil_pv"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:src="@drawable/icon_person"
        app:layout_constraintBottom_toBottomOf="@+id/view_container_perfil_pv"
        app:layout_constraintEnd_toEndOf="@+id/view_container_perfil_pv"
        app:layout_constraintStart_toStartOf="@+id/view_container_perfil_pv"
        app:layout_constraintTop_toTopOf="@+id/view_container_perfil_pv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_seta_pv"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:background="@drawable/back_btn_arrow1"
        android:drawableRight="@drawable/icon_arrow"
        android:padding="10dp"
        android:text="@string/ponto1_pv"
        android:textColor="@color/branco_k"
        android:layout_marginTop="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout_pv"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:background="@drawable/back_btn_logout"
        android:drawableLeft="@drawable/icon_logout"
        android:padding="10dp"
        android:text="@string/ponto2_pv"
        android:textColor="@color/branco_k"
        android:layout_marginTop="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/nome_icon_pv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_person_2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_container_perfil_pv" />

    <TextView
        android:id="@+id/text_nome_perfil_pv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayo Araujo da Silva"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="@font/chau_philomene_one"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/nome_icon_pv"
        app:layout_constraintTop_toBottomOf="@id/view_container_perfil_pv"/>

    <ImageView
        android:id="@+id/email_icon_pv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_icon_pv" />

    <TextView
        android:id="@+id/text_email_perfil_pv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chau_philomene_one"
        android:text="kayo.araujo@gmail.com"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/nome_icon_pv"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_perfil_pv" />

    <View
        android:id="@+id/view_container_bottom_bv"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="@color/marrom_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/view_container_bolinha_pv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/z_bola"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>