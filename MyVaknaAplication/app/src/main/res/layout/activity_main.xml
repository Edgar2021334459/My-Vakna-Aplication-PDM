<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_t1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_logo_bv"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_marrom" />

    <TextView
        android:id="@+id/text_vakna_bv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="V  A  K  N  A"
        android:fontFamily="@font/chau_philomene_one"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toTopOf="@+id/view_container_bv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo_bv" />

    <View
        android:id="@+id/view_container_bv"
        style="@style/ContainerComponents_t1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/text_bemvindo_bv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/chau_philomene_one"
        android:text="Seja bem-vindo!"
        android:textColor="@color/branco_k"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/view_container_bv"
        app:layout_constraintStart_toStartOf="@+id/view_container_bv"
        app:layout_constraintTop_toTopOf="@+id/view_container_bv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cadastro_bv"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_margin="35dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/back_btn_branco"
        android:fontFamily="@font/chau_philomene_one"
        android:padding="5dp"
        android:text="@string/cadastro_bv"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_container_bv"
        app:layout_constraintStart_toStartOf="@+id/view_container_bv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_bv"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_margin="35dp"
        android:background="@drawable/back_btn_branco"
        android:fontFamily="@font/chau_philomene_one"
        android:padding="5dp"
        android:text="@string/login_bv"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_container_bv"
        app:layout_constraintEnd_toEndOf="@+id/view_container_bv" />

</androidx.constraintlayout.widget.ConstraintLayout>